# Titanium Repo Operator - Environment Configuration Example
# Copy this to .env and customize for your deployment

# =============================================================================
# Core Configuration
# =============================================================================

# Repository root path (where the agent operates)
# In containers, this should be /workspace
REPO_ROOT=/workspace

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# =============================================================================
# Audit & Security
# =============================================================================

# HMAC key for audit log signing (CHANGE IN PRODUCTION!)
# Generate with: openssl rand -hex 32
TITANIUM_AUDIT_KEY=dev-key-change-me

# =============================================================================
# Agent Constraints (Policy Engine)
# =============================================================================

# Maximum lines of code per patch
TITANIUM_MAX_LOC=500

# Maximum files per patch
TITANIUM_MAX_FILES=20

# Maximum iterations per task
TITANIUM_MAX_ITERATIONS=10

# Require human approval for push to protected branches
TITANIUM_REQUIRE_APPROVAL=true

# =============================================================================
# Command Execution
# =============================================================================

# Shell command timeout in seconds
TITANIUM_SHELL_TIMEOUT=30

# Output truncation limit in characters
TITANIUM_OUTPUT_LIMIT=16000

# =============================================================================
# Commit Signing (Optional)
# =============================================================================

# Signing method: none, gpg, ssh, sigstore
TITANIUM_SIGNING_METHOD=none

# Signing key (GPG key ID or path to SSH private key)
# TITANIUM_SIGNING_KEY=~/.ssh/id_ed25519

# SSH allowed signers file (for verification)
# TITANIUM_SSH_ALLOWED_SIGNERS=~/.ssh/allowed_signers

# =============================================================================
# Development Mode
# =============================================================================

# Enable development mode (auto-approves operations, relaxed security)
# NEVER enable in production!
TITANIUM_DEV_MODE=false
